{
    "compilerOptions": {
      "target": "ES2016",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react-jsx",
      "strict": true,
      "types": ["node"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": ".",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  