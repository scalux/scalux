{
  "name": "scalux",
  "version": "0.2.0",
  "description": "Build robust and scalable React-Redux applications",
  "author": "louis@lisztz.io",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "import": "./dist/helpers.mjs",
      "require": "./dist/helpers.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run test && npm run build"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^1.9.0 || ^2.0.0",
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-redux": "^8.0.0 || ^9.0.0",
    "redux-undo": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.1",
    "@types/react": "^18.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.1.2",
    "jsdom": "^24.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.2.0",
    "vitest": "^3.1.2"
  },
  "keywords": [
    "react",
    "redux",
    "redux-toolkit",
    "state management",
    "typescript",
    "react-redux",
    "undo",
    "redo",
    "scalux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalux/scalux.git"
  },
  "bugs": {
    "url": "https://github.com/scalux/scalux/issues"
  },
  "homepage": "https://github.com/scalux/scalux#readme"
}
